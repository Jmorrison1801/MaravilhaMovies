{% extends 'layout.html.twig' %}
{% block title %}{{ page_title }}{% endblock %}
{% block banner %}
<div id="account-div">
    <h1>{{ page_heading_1 }}</h1>
    <hr class="deepline"/>
    <nav id="banner-nav">
        <a href="{{ login_button }}">{{ login_value }}</a>
        <a href="{{ homepage }}">Homepage</a>
        <a href="{{ advance_action }}">Advance Search</a>
        <a href="#">Recent Releases</a>
        <a href="#">About</a>
    </nav>
    <fieldset id="homepage-fieldset">
        <form id="homepage-form" action="{{ search_action }}" method="post">
            <input id="search_movie" name="search_movie" type="text" value="Enter Movie Name" size="30" maxlength="50">
            <input type="submit" value="Search" id="search_btn">
        </form>
    </fieldset>
</div>
<div id="clear-div"></div>
{% endblock %}